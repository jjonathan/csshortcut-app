.header{
	width 100%
	// height 30px
	background-color $highlight-color
}

.menu{
	header_dev()
	display flex
	align-items center
}

@media screen and (max-width 400px){
	.menu{
		width 100%
		justify-content center
		order 2
		margin 10px 0
	}
}

.menu-items{
	margin-top 0
	margin-bottom 0
	padding-left 0
}

.menu-item{
	list-style none
	display inline-block
}

.menu-link{
	color $branco-color
	text-decoration none
	display inline-block
	padding 10px
}

.profile{
	header_dev()
	margin-left auto
}

@media screen and (max-width 400px){
	.profile{
		width 100%
		text-align center
		order 1
		margin 10px 0
	}
}

.profile img{
	max-width 50px
	max-height 50px
	vertical-align middle
	margin 5px
}

.profile-text{
	margin 5px
	display inline-block
	color $branco-color
}